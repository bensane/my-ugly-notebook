<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col mdl-cell--12-col-tablet">


    <div class="mdl-card mdl-shadow--2dp demo-card-wide">
      <div class="mdl-card__title" style="background-color:black;">
        <h2 class="mdl-card__title-text">{{model.name}}</h2>
      </div>
      <div class="mdl-card__supporting-text">
        <form action="#">
          <div class="mdl-textfield mdl-js-textfield textfield-demo">
            {{input type="text" class="mdl-textfield__input" id="name"  value=model.name}}
            <label class="mdl-textfield__label" for="name">Notebook</label>
          </div>
        </form>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <button {{action 'submit'}} class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Save</button>
      </div>
      <div class="mdl-card__menu">
        <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
          {{material-design-icon name='share'}}
        </button>
      </div>
    </div>

  </div>
</div>

{{outlet}}
