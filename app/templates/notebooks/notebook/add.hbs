<!-- Square card -->
<style>
  .demo-card-square.mdl-card {
    width: 320px;
    height: 320px;
  }
  .demo-card-square > .mdl-card__title {
    color: #fff;
    background:
      url('../assets/demos/dog.png') bottom right 15% no-repeat #46B6AC;
  }
</style>

<div class="mdl-card mdl-shadow--2dp demo-card-square">
  <div class="mdl-card__title mdl-card--expand">
    <h2 class="mdl-card__title-text"><h5>Create Page</h5></h2>
  </div>
  <div class="mdl-card__supporting-text">
    <form>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        {{input value=name class="mdl-textfield__input" type="text" id="name"}}
        <label class="mdl-textfield__label" for="name">Name...</label>
      </div>
    </form>
    <form>
      <div class="mdl-textfield mdl-js-textfield textfield-demo">
        {{textarea value=body class="mdl-textfield__input" type="text" rows= "3" id="content"}}
        <label class="mdl-textfield__label" for="sample5">Notes...</label>
      </div>
    </form>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a {{action 'add'}} class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
      Add
    </a>
  </div>
</div>
